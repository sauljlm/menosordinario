<div class="row">
    {{#each notes }}
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">
                        {{title}}
                    </h4>
                    <p>
                        {{description}}
                    </p>
                    <a href="/notes/edit/{{_id}}" class="btn btn-danger">Edit</a>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <h1>Hello {{user.name}}</h1> <!-- para cuando se loguea dar una bienvenida -->
                <p class="lead">There are not notes yet</p>
                <a href="/notes/add" class="btn btn-success btn-block">Create new note!</a>
            </div>
        </div>
    {{/each}}
</div>